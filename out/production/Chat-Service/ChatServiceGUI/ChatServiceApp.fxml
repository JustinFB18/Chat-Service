<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatServiceGUI.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="426.0" prefWidth="500.0" style="-fx-background-color: #7B97C3;">
            <children>
            <Pane fx:id="Header" prefHeight="38.0" prefWidth="500.0" style="-fx-background-color: #3A64A6;">
               <children>
                      <Label fx:id="title_App" layoutX="207.0" layoutY="7.0" text="Chat Service" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font>
                  </Label>
               </children></Pane>
            <TextField fx:id="txtInfo" layoutX="18.0" layoutY="365.0" prefHeight="47.0" prefWidth="405.0" promptText="Ingrese el valor del producto, su peso y los impuestos" />
            <Button fx:id="btnSend" layoutX="425.0" layoutY="370.0" mnemonicParsing="false" onAction="#btnSendClick" prefHeight="38.0" prefWidth="62.0" text="Enviar" />
            <TextArea fx:id="txtMessages" editable="false" layoutX="18.0" layoutY="44.0" prefHeight="292.0" prefWidth="472.0" wrapText="true" />
            <Label fx:id="txtInfoRequired" layoutX="18.0" layoutY="342.0" text="Ingrese el valor del producto, su peso y los impuestos (separados por comas)" />
            </children>
        </Pane>
    </children>
